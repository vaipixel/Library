.page {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.records {
    width: 100%;
    display: flex;
    justify-content: center;
}

.record {
    width: 85%;
    height: 250rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--primary-color);
    margin-top: 60rpx;
    border-radius: 20rpx;
    box-shadow: 0 10rpx 16rpx #BDD3E1;
    padding: 20rpx;
    position: relative;
}

.info {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    color: aliceblue;
}

.name {
    font-size: 40rpx;
    font-weight: 530;
}

.date {
    margin-top: 20rpx;
    opacity: 0.8;
}

.actions {
    display: flex;
    justify-content: flex-end;
    position: absolute;
    right: 0;
    bottom: 0;
    margin: 0 20rpx 20rpx 0;
}

.btn {
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx;
}

.checkIn {
    background: aliceblue;
}

.checkOut {
    background: #FF4747;
    color: aliceblue;
    margin-left: 30rpx;
}
